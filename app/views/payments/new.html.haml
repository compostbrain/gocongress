- authnet_form_url = AuthorizeNet::SIM::Transaction::Gateway::LIVE

= form_for :sim_transaction, :url => authnet_form_url do |f|
  = sim_fields(@sim_transaction)

  %h2 Payment Information
  %table.lightweight.lightly-spaced-rows
    %tbody
      %tr
        %th Amount
        %td= number_to_currency(@amount)
      %tr
        %th Credit Card Number
        %td= text_field_tag 'x_card_num', dev? ? '4111 1111 1111 1111' : nil
      %tr
        %th Expiration Date (MMYY)
        %td= text_field_tag 'x_exp_date', dev? ? '1120' : '', :size => 4
      %tr
        %th Card Code
        %td= text_field_tag 'x_card_code', dev? ? '123' : '', :size => 3
      %tr
        %th
        %td= submit_tag('Finish', data: { disable_with: 'Please wait...' })
